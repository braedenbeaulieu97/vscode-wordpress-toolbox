{
    "name": "wordpress-toolbox",
    "displayName": "WordPress Snippets",
    "description": "The ultimate WordPress snippet collection. WordPress 6.0",
    "version": "1.4.0-beta",
    "publisher": "wordpresstoolbox",
    "engines": {
        "vscode": "^1.19.0"
    },
    "categories": [
        "Snippets"
    ],
    "keywords": [
        "wordpress"
    ],
    "activationEvents": [
        "onLanguage:php",
        "onStartupFinished"
    ],
    "main": "./extension.js",
    "contributes": {
        "configuration": {
            "title": "WordPress Snippets",
            "properties": {
                "wpSnippets.snippetMode": {
                    "type": "string",
                    "enum": ["Full", "Flat"],
                    "default": "Full",
                    "description": "Choose which snippet set to use. (Changing this setting will reload VSCode)",
                    "enumDescriptions": [
                        "Use Full WordPress Snippets (with arguments)",
                        "Use Flat WordPress Snippets (no arguments)"
                    ]
                }
            }
        },
        "snippets": [
            {
                "language": "php",
                "path": "./snippets/snippets.json"
            }
        ],
        "commands": [
            {
                "command": "extension.useFullSnippets",
                "title": "Use Full WordPress Snippets (reloads VSCode)"
            },
            {
                "command": "extension.useFlatSnippets",
                "title": "Use Flat WordPress Snippets (reloads VSCode)"
            }
        ]
    },
    "icon": "images/wpprotools-icon.png",
    "license": "MIT",
    "homepage": "https://www.elev8webstudio.com/",
    "repository": {
        "type": "git",
        "url": "https://github.com/jason-pomerleau/vscode-wordpress-toolbox"
    },
    "bugs": {
        "email": "jason@elev8webstudio.com"
    },
    "dependencies": {
        "vsce": "^1.75.0"
    },
    "devDependencies": {
        "vscode": "^1.1.37"
    }
}
